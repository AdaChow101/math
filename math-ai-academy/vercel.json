{
  "version": 2,
  "builds": [
    {
      "src": "backend/server/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "supportsResponseStreaming": true
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [ 
    // 1. API 代理：将所有 /api/* 的请求重写到后端服务入口
    {
      "source": "/api/(.*)",
      "destination": "/backend/server/index.js"
    },
    // 2. SPA 路由：将所有其他请求（包括深层链接如 /dashboard）重写到前端 index.html
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}